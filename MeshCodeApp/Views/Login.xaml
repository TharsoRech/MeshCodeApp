<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeshCodeApp.Views.Login"
             BackgroundColor="{StaticResource MeshBlue}"
             Title="Login">
    <Grid RowDefinitions="auto,auto" Padding="16,64,16,16" VerticalOptions="StartAndExpand" RowSpacing="128" >
        <Image Source="meshcode.svg" WidthRequest="160" HeightRequest="160" VerticalOptions="StartAndExpand">
        </Image>
        <Grid RowDefinitions="auto,auto,auto" Grid.Row="1" VerticalOptions="EndAndExpand" RowSpacing="16" Margin="0,16,0,0">
            <Entry Placeholder="Email" Text="{Binding Email}"/>
            <Entry IsPassword="True" Placeholder="Senha" Text="{Binding Senha}" Grid.Row="1" />
            <Button Text="Entrar" Grid.Row="2"  Command="{Binding LoginCommand}"/>
        </Grid>
    </Grid>
</ContentPage>